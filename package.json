{
  "name": "wilpos",
  "version": "1.0.0",
  "description": "WilPOS Point of Sale System",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "vite --port 3000",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-dev": "concurrently -k \"npm run start\" \"wait-on http://localhost:3000 && npm run electron\"",
    "electron-build": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "test": "vitest"
  },
  "keywords": [
    "pos",
    "point-of-sale",
    "thermal-printer",
    "receipt-printer",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/react": "^19.1.3",
    "@types/react-dom": "^19.1.3",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.1.0",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.24.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "typescript": "^5.3.3",
    "vite": "^6.2.0",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "@tailwindcss/postcss": "^4.1.6",
    "@types/react-datepicker": "^6.2.0",
    "better-sqlite3": "^11.9.1",
    "cheerio": "^1.0.0",
    "electron-pos-printer": "^1.3.7",
    "escpos": "^3.0.0-alpha.6",
    "escpos-usb": "^3.0.0-alpha.4",
    "fs-extra": "^11.2.0",
    "iconv-lite": "^0.6.3",
    "lucide-react": "^0.487.0",
    "node-thermal-printer": "^4.4.5",
    "pdfkit": "^0.17.1",
    "postcss": "^8.5.3",
    "qr-image": "^3.2.0",
    "react": "^19.1.0",
    "react-datepicker": "^8.3.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.5.0",
    "serialport": "^13.0.0",
    "sqlite3": "^5.1.7",
    "tailwindcss": "^4.1.6",
    "usb": "^2.15.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.wilpos.app",
    "productName": "WilPOS",
    "files": [
      "dist/**/*",
      "main.js",
      "preload.cjs",
      "schema.sql",
      "assets/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraResources": [
      "schema.sql"
    ],
    "extraFiles": [
      {
        "from": "node_modules/escpos/node_modules/mutable-buffer/dist",
        "to": "resources/escpos"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/images/icons/logo.ico"
    },
    "mac": {
      "category": "public.app-category.business",
      "target": [
        "dmg"
      ],
      "icon": "assets/images/icons/logo.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office",
      "icon": "assets/images/icons/logo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "installerIcon": "assets/images/icons/logo.ico"
    }
  }
}
